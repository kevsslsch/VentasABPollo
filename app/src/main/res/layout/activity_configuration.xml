<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitleConfigurations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="Configuraciones"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitleConfigurations"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Conexión online "
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switchAutoLoadData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/switchConnection"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:switchPadding="25sp"
            android:text="Descarga automática de los datos"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtViewPrinter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Impresora vinculada:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnPiarUnpair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/custom_btn_info"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="visible"
            tools:text="Vincular impresora" />

        <LinearLayout
            android:id="@+id/layoutHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/switchAutoLoadData"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtViewText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Selecciona una hora a la que se bajarán los datos todos los días. Es recomendable que sea por la  noche y mientras el dispositivo esté encendido y tenga conexión a internet."
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/buttonAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_radius"
                android:text="Configurar tarea automática"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>